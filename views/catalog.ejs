<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>APOD Explorer</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    </head>
    <body>
        <nav class="navbar navbar-expand-lg bg-dark" data-bs-theme="dark">
            <div class="container-fluid">
                <a class="navbar-brand" href="/">APOD</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="/">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/explore">Explore</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/catalog">Catalog</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
        <div class="container-fluid text-center bg-dark-subtle">
            <div class="row p-2">
                <div class="col">
                    <div class="text-black">
                        <h2>Catalog</h2>
                    </div>
                </div>
            </div>
            <div class="row p-3">
                <div class="container-fluid text-center text-white p-3 bg-dark" style="max-width: 100%">
                    <form action="/unlike" method="POST" id="unlike">
                        <div class="row p-1 justify-content-center">
                            <div class="col-2 bg-dark-subtle p-2" style="max-width: 100%">
                                <% for(var i = 0; i < picList.length; i++) {%>
                                    <li>
                                        <div class="card text-center justify-content-center" style="max-width: 100%">
                                            <div class="card-body">
                                                <%= picList[i].date %><br/>
                                                <img src="<%= picList[i].imgUrl %>" class="card-img-fluid img-thumbnail" alt="<%= picList[i].explanation %>">
                                                <input type="checkbox" name="selected" value="<%= picList[i]._id %>"/>
                                            </div>
                                        </div>
                                    </li>
                                <% } %>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="row p-2 text-center justify-content-center">
                    <div class="col-2">
                        <button type="submit" class="p-2 btn btn-outline-success" form="unlike">
                            Unlike
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </body>
</html>